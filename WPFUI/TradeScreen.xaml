<Window x:Class="WPFUI.TradeScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controller ="clr-namespace:Engine.Controllers;assembly=Engine"
        d:DataContext="{d:DesignInstance Controller:GameSession}"
        xmlns:local="clr-namespace:WPFUI"
        mc:Ignorable="d"
        WindowStartupLocation="Manual"
        FontFamily="MS Gothic"
        Foreground="White"
        Title="TRADE" Height="480" Width="640">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="+--+" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center"/>
        <Label Content="YOUR INVENTORY" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center"/>
        <Label Content="APOTHECARY" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center"/>

        <DataGrid>
            
        </DataGrid>
    </Grid>
</Window>
